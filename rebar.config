{erl_opts, [debug_info]}.
{deps, [
        {cowboy, "2.2.0"},
        {jsx, {git, "https://github.com/talentdeficit/jsx.git", {branch, "v2.8.0"}}},
        {gproc, "0.5.0"}
        ]
}.

{relx, [{release, { survivor, "0.1.0" },
         [survivor,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.

{plugins, [rebar3_run]}.
